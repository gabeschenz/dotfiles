	; experiments with gum
	nb = "!f() { TYPE=$(gum choose \"chore\" \"docs\" \"feat\" \"fix\" \"refactor\" \"style\" \"test\"); STORY=$(gum)}"
[log]
	date = iso8601

[help]
	autocorrect = prompt

[commit]
	verbose = true

[rerere]
  enabled = true
  autoupdate = true

[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true

[oh-my-zsh]
	git-commit-alias = fa396ad7718af77e896472772bffd4a7e9110193
[color]
	ui = auto
[status]
	verbose = true
	porcelain = true
	showStash = true
