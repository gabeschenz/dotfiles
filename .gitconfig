	; experiments with gum
	nb = "!f() { TYPE=$(gum choose \"chore\" \"docs\" \"feat\" \"fix\" \"refactor\" \"style\" \"test\"); STORY=$(gum)}"
[log]
	date = iso8601

[help]
	autocorrect = prompt

[commit]
	verbose = true

[rerere]
  enabled = true
  autoupdate = true

[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true

