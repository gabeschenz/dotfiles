[column]
  ui = auto

[core]
  editor = nvim
  excludesfile = ~/.gitignore

[diff]
  algorithm = histogram
  mnemonicPrefix = true
  renames = true
  colorMoved = plain

[init]
	defaultBranch = main

[user]
	name = Gabe Schenz
	email = gabe.schenz@allergan.com

[push]
  default = simple
  autoSetupRemote = true
  followTags = true

[fetch]
  prune = true
  pruneTags = true
  all = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[gc]
	autoDetach = false
	pruneExpire = now

[credential]
	helper = cache --timeout 3600

[safe]
	directory = *

[alias]
	aliases = config --get-regexp alias
	overview = !git status -sb && git log --oneline -5
	emoji-status = !bash -c 'git status -sb | sed "s/^##/üîñ/; s/^A/‚úÖ/; s/^M/üìù/; s/^D/‚ùå/; s/^R/‚ôªÔ∏è/; s/^??/‚ùì/"'

	open = !git-open
	; Repo maintenance
	prune-branches = !git remote prune origin && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -d
	; reporting
	; https://git-scm.com/docs/git-log#_pretty_formats
	l = log --pretty=format:\"%C(magenta)%h%C(reset) ‚Ä¢ (%cr) ‚Ä¢%C(cyan)%d%C(reset) ‚Ä¢ %C(ul green)%s%C(reset) ‚Ä¢ %C(bold blue)[%an]\" --decorate --numstat
	lg = !git log --pretty=format:\"%C(magenta)%h%Creset -%C(cyan)%d%C(reset)%C(green) %s %C(blue)(%cr)%C(reset) [%an]\" --graph --abbrev-commit -30
	br = ! git --no-pager branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
	graph = log --oneline --graph --decorate
	recent = !git branch --sort=-committerdate | head

	; daily operations
	s = status --short --branch --show-stash --untracked-files=no
	ss = status --branch --untracked-files=no
	co = checkout
	cob = checkout -b
	del = branch -D
	save = !git add -A && git commit -m 'chore: commit save point'
	undo = reset HEAD~1 --mixed
	res = !git reset --hard
	fix = "!a() {\nlocal _scope _attention _message\nwhile [ $# -ne 0 ]; do\ncase $1 in\n  -s | --scope )\n    if [ -z $2 ]; then\n      echo \"Missing scope!\"\n      return 1\n    fi\n    _scope=\"$2\"\n    shift 2\n    ;;\n  -a | --attention )\n    _attention=\"!\"\n    shift 1\n    ;;\n  * )\n    _message=\"${_message} $1\"\n    shift 1\n    ;;\nesac\ndone\ngit commit -m \"fix${_scope:+(${_scope})}${_attention}:${_message}\"\n}; a"
